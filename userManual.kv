            Label:
                markup: True
                text: "[b]Contact Us[/b]"
                halign: 'left'
                valign: 'top'
                color: (0,0,0,1)
                size_hint: (1, None)
                height: self.texture_size[1]
                font_size: 30
                text_size: self.width, None
            
            Label:
                markup: True
                text: "If you have any questions about this User Manual, you can contact us:\n\nBy email: MathletApp@gmail.com"
                halign: 'left'
